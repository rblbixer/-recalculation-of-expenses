# Quick start:
# 1) cp .env.example .env
# 2) Fill BOT_TOKEN and DB credentials
# 3) poetry install
# 4) poetry run python app/main.py

# Bot
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Database (PostgreSQL default)
DATABASE_URL=postgresql+asyncpg://user:pass@localhost/finance_bot
# For local SQLite (override above):
# DATABASE_URL=sqlite+aiosqlite:///./finance.db

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
